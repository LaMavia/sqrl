@import "./_breakpoints.pcss";

.modal {
  position: fixed;
  bottom: 0;
  left: var(--nav-w);
  width: calc(100vw - var(--nav-item-s));
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.7);

  @include phone {
    height: calc(100vh - var(--nav-h));
    width: 100vw;
    left: 0;
    bottom: var(--nav-h);
  }

  &__click-catcher {
    position: absolute;
    z-index: -1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
  }
}